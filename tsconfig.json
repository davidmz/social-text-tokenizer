{
  "compilerOptions": {
    "noEmit": true,
    "sourceMap": false,
    "target": "ESNext",
    "lib": ["ES2017", "DOM"],

    "moduleResolution": "node",
    "module": "commonjs",
    "declaration": false,
    "importHelpers": true,

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["./src/**/*", "./build.config.ts"],
  "exclude": ["./src/**/*.test.ts", "./src/legacy-tests"]
}
